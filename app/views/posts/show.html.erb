<!-- End Header and Nav -->


<div class="row">
  <div class="eight columns" id="post">
    <p id="post_title"><%= @post.title %></p>
    <p id="post_body"><%= simple_format(@post.body) %></p>
    <% if @post.tag_list != "" %>
      <% @post.tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="twelve columns"
    <% if current_user %>
        <p><%= button_to "Edit", edit_post_path, method: :get, :class => "radius button small" %></p>
        <p><%= button_to "Delete", post_path(@post), method: :delete, :class => "radius button small", :confirm => "Are you sure you want to delete this post?" %></p>
    <% end %>
  </div>
</div>
